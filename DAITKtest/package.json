{
  "name": "daitk-decompiler",
  "displayName": "DAITK AI Decompiler",
  "description": "AI-powered assembly to C decompiler with verification",
  "version": "1.0.0",
  "publisher": "daitk",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:assembly",
    "onCommand:daitk.decompileFunction",
    "onCommand:daitk.verifyDecompilation",
    "onCommand:daitk.openAssemblyExplorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "daitk.decompileFunction",
        "title": "DAITK: Decompile Function",
        "category": "DAITK"
      },
      {
        "command": "daitk.verifyDecompilation",
        "title": "DAITK: Verify Decompilation",
        "category": "DAITK"
      },
      {
        "command": "daitk.openAssemblyExplorer",
        "title": "DAITK: Open Assembly Explorer",
        "category": "DAITK"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "daitkAssemblyExplorer",
          "name": "Assembly Functions"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "daitk-sidebar",
          "title": "DAITK Decompiler",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "daitk-sidebar": [
        {
          "id": "daitkAssemblyExplorer",
          "name": "Assembly Functions"
        },
        {
          "id": "daitkDecompilationStatus",
          "name": "Decompilation Status"
        }
      ]
    },
    "configuration": {
      "title": "DAITK Decompiler",
      "properties": {
        "daitk.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for AI service"
        },
        "daitk.modelProvider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "local"
          ],
          "default": "openai",
          "description": "AI model provider"
        },
        "daitk.compilerPath": {
          "type": "string",
          "default": "",
          "description": "Path to Metrowerks CodeWarrior compiler"
        },
        "daitk.objdiffPath": {
          "type": "string",
          "default": "",
          "description": "Path to objdiff tool"
        }
      }
    },
    "languages": [
      {
        "id": "assembly",
        "extensions": [
          ".s",
          ".asm"
        ],
        "aliases": [
          "Assembly",
          "asm"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "start": "node dist/index.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "keywords": [
    "ai",
    "decompiler",
    "assembly",
    "c",
    "verification"
  ],
  "author": "DAITK Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.0.0",
    "zod": "^3.0.0",
    "openai": "^4.0.0",
    "@anthropic-ai/sdk": "^0.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
